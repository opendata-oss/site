        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Each database is focused on one use case. All share the same operational model.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 gap-4 max-w-4xl mx-auto">
        <DatabaseCard
          name="Log"
          description="Durable event streaming with replayable logs. Kafka-compatible concepts, cloud-native architecture."
          href="/databases/log"
          color="#10b981"
          icon="&#x1F4CB;"
          features={[
            "Replayable event streams",
            "HTTP and binary protocols",
            "Exactly-once semantics",
          ]}
        />
        <DatabaseCard
          name="Timeseries"
          description="Prometheus-compatible TSDB for metrics and monitoring. PromQL queries, remote write ingestion."
          href="/databases/timeseries"
          color="#f59e0b"
          icon="&#x1F4C8;"
          features={[
            "Prometheus-compatible API",
            "PromQL query engine",
            "Long-term metrics storage",
          ]}
        />
        <DatabaseCard
          name="Vector"
          description="SPANN-style approximate nearest neighbor search for embeddings and AI applications."
          href="/databases/vector"
          color="#8b5cf6"
          icon="&#x1F9ED;"
          features={[
            "ANN search with SPANN",
            "High-dimensional vectors",
            "Filtered similarity queries",
          ]}
        />
        <DatabaseCard
          name="Key-Value"
          description="Fast key-value storage built directly on SlateDB. Simple, reliable, and cloud-native."
          href="/databases/kv"
          color="#0ea5e9"
          icon="&#x1F511;"
          features={[
            "Get/put/delete operations",
            "Range scans",
            "Point-in-time snapshots",
          ]}
          comingSoon={true}
        />
      </div>
    </div>
  </section>

  <!-- Architecture Section -->
