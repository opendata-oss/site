---
interface Props {
  name: string;
  description: string;
  href: string;
  color: string;
  icon: string;
  features: string[];
  comingSoon?: boolean;
}

const { name, description, href, color, icon, features, comingSoon = false } = Astro.props;
---

<a
  href={comingSoon ? undefined : href}
  class:list={[
    "group block rounded-xl border border-border p-6 transition-all",
    comingSoon ? "opacity-70 cursor-default" : "hover:border-border hover:shadow-lg hover:-translate-y-0.5",
  ]}
>
  <div class="flex items-start gap-4">
    <div
      class="flex items-center justify-center w-10 h-10 rounded-lg text-white text-lg shrink-0"
      style={`background-color: ${color}`}
    >
      <span>{icon}</span>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <h3 class="font-semibold text-lg">{name}</h3>
        {comingSoon && (
          <span class="text-xs font-mono px-2 py-0.5 rounded-full bg-surface-alt text-text-muted border border-border">
            Coming Soon
          </span>
        )}
      </div>
      <p class="text-sm text-text-secondary mt-1">{description}</p>
      <ul class="mt-3 space-y-1">
        {features.map(feature => (
          <li class="text-xs text-text-muted flex items-center gap-1.5">
            <span style={`color: ${color}`}>&#9679;</span>
            {feature}
          </li>
        ))}
      </ul>
      {!comingSoon && (
        <span class="inline-block mt-3 text-sm font-medium text-accent group-hover:underline">
          Learn more &rarr;
        </span>
      )}
    </div>
  </div>
</a>
