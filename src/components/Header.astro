          </svg>
        </a>

        <!-- Mobile hamburger -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-text-muted hover:text-text transition-colors"
          aria-label="Open menu"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-white">
    <div class="px-4 py-3 space-y-1">
      {navLinks.map(link => (
        link.children ? (
          <>
            <div class="px-3 py-2 text-xs font-semibold text-text-muted uppercase tracking-wider">Databases</div>
            {link.children.map(child => (
              <a
                href={child.href}
                class={`block px-3 py-2 text-sm rounded-md ${
                  isActive(child.href) ? 'text-accent bg-surface-alt' : 'text-text-secondary hover:text-text'
                }`}
              >
                {child.label}
              </a>
            ))}
          </>
        ) : (
          <a
            href={link.href}
            class={`block px-3 py-2 text-sm font-medium rounded-md ${
              isActive(link.href) ? 'text-accent' : 'text-text-secondary hover:text-text'
            }`}
          >
            {link.label}
          </a>
        )
      ))}
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
