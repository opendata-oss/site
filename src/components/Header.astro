---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'How It Works', href: '/how-it-works' },
  { label: 'Databases', href: '/databases/log', children: [
    { label: 'Log', href: '/databases/log' },
    { label: 'Timeseries', href: '/databases/timeseries' },
    { label: 'Vector', href: '/databases/vector' },
    { label: 'Key-Value', href: '/databases/kv' },
  ]},
  { label: 'Manifesto', href: '/manifesto' },
  { label: 'Community', href: '/community' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-lg border-b border-border">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 shrink-0">
        <img src="/images/icon.svg" alt="" class="h-8 w-8" />
        <span class="font-semibold text-lg tracking-tight">opendata</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          link.children ? (
            <div class="relative group">
              <button class={`px-3 py-2 text-sm font-medium rounded-md transition-colors ${
                isActive(link.href) ? 'text-accent' : 'text-text-secondary hover:text-text'
              }`}>
                Databases
                <svg class="inline-block w-3.5 h-3.5 ml-0.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute left-0 top-full pt-1 hidden group-hover:block">
                <div class="bg-white rounded-lg shadow-lg border border-border py-1 min-w-[160px]">
                  {link.children.map(child => (
                    <a
                      href={child.href}
                      class={`block px-4 py-2 text-sm transition-colors ${
                        isActive(child.href) ? 'text-accent bg-surface-alt' : 'text-text-secondary hover:text-text hover:bg-surface-alt'
                      }`}
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <a
              href={link.href}
              class={`px-3 py-2 text-sm font-medium rounded-md transition-colors ${
                isActive(link.href) ? 'text-accent' : 'text-text-secondary hover:text-text'
              }`}
            >
              {link.label}
            </a>
          )
        ))}
      </div>

      <!-- Right side icons -->
      <div class="flex items-center gap-3">
        <a
          href="https://github.com/opendata-oss/opendata"
          target="_blank"
          rel="noopener"
          class="text-text-muted hover:text-text transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
